{
  "compilerOptions": {
    "rootDir": "./",
    "target": "esnext",
    "allowJs": true,
    "checkJs": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "pretty": true,
    "noEmitOnError": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": true,
    "newLine": "lf",
    "sourceMap": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "useDefineForClassFields": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "lib": ["esnext"]
  }
}
